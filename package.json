{
  "name": "tinycloud-web-sdk",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "packages/web-core",
    "packages/web-sdk",
    "packages/sdk-core",
    "packages/sdk-services",
    "packages/sdk-rs",
    "packages/sdk-rs/packages/web",
    "packages/sdk-rs/packages/node",
    "packages/node-sdk",
    "apps/*",
    "tests/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "./scripts/clean.sh",
    "doc": "turbo doc",
    "dev:apps": "turbo dev --filter=./apps/web-sdk-example",
    "demo:build": "turbo build --filter=tinycloud-web-sdk-example-app",
    "demo:test": "bun --cwd apps/web-sdk-example run test",
    "demo:test:e2e": "bun --cwd apps/web-sdk-example run test:e2e",
    "node-demo": "turbo build --filter=@tinycloudlabs/node-sdk... && bun run --cwd apps/node-demo src/demo.ts",
    "node-demo:run": "bun run --cwd apps/node-demo src/demo.ts",
    "node-demo:run:delegation": "bun run --cwd apps/node-demo src/demo-delegation-api.ts",
    "node-test": "bun run --cwd packages/node-sdk build && bun run --cwd apps/node-demo src/test-space.ts",
    "node-test:run": "bun run --cwd apps/node-demo src/test-space.ts",
    "web-core": "bun --cwd packages/web-core -c",
    "node-sdk": "bun --cwd packages/node-sdk -c",
    "web-sdk": "bun --cwd packages/web-sdk -c",
    "sdk-core": "bun --cwd packages/sdk-core -c",
    "sdk-rs": "bun --cwd packages/sdk-rs -c",
    "web-sdk-wasm": "bun --cwd packages/sdk-rs/packages/web -c",
    "node-sdk-wasm": "bun --cwd packages/sdk-rs/packages/node -c",
    "clean-docs": "./scripts/clean-docs.sh",
    "github-pub": "./scripts/switch-registry.sh github",
    "npm-pub": "./scripts/switch-registry.sh npm",
    "docs:dev": "cd documentation && bun run docs:dev",
    "docs:build": "cd documentation && bun run docs:build",
    "docs:serve": "cd documentation && bun run serve",
    "docs:generate-api": "turbo doc:documenter",
    "docs:deploy": "cd documentation && bun run docs:deploy",
    "changeset:add": "bun changeset add",
    "changeset:version": "bun changeset version",
    "changeset:publish": "bun changeset publish --access public",
    "release": "./scripts/release.sh",
    "publish": "./scripts/publish.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/preset-classic": "^3.7.0",
    "@tinycloudlabs/sdk-core": "workspace:*",
    "@tinycloudlabs/web-core": "workspace:*",
    "@tinycloudlabs/web-sdk": "workspace:*",
    "@tinycloudlabs/web-sdk-wasm": "workspace:*",
    "@tinycloudlabs/node-sdk-wasm": "workspace:*",
    "@tinycloudlabs/node-sdk": "workspace:*",
    "turbo": "^2.5.4"
  },
  "keywords": [],
  "author": "TinyCloud, Inc.",
  "license": "EGPL",
  "trustedDependencies": [
    "@reown/appkit",
    "core-js",
    "core-js-pure"
  ]
}
