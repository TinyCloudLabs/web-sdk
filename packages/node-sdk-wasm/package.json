{
  "name": "@tinycloudlabs/node-sdk-wasm",
  "version": "0.1.0",
  "description": "TinyCloud SDK for Node.js - WASM bindings",
  "author": "TinyCloud, Inc.",
  "license": "Apache-2.0 OR MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build:wasm": "cd ../web-sdk-rs && wasm-pack build --release --target nodejs --out-dir pkg-nodejs -- --features nodejs",
    "build": "bun run build:wasm && tsc",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tinycloudlabs/web-sdk"
  }
}
