{
  "name": "@tinycloudlabs/web-sdk-wasm",
  "version": "0.3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "TinyCloud, Inc.",
  "license": "Apache-2.0 OR MIT",
  "scripts": {
    "setup": "./scripts/setup-rust.sh",
    "build": "bash -c 'source ../../scripts/setup.sh && wasm-pack build --release --target web --out-dir web-sdk-wasm -- --features browser && rollup -c && $PWD/fixup-types.sh'",
    "build:wasm": "wasm-pack build --release --target web --out-dir web-sdk-wasm -- --features browser",
    "build-dev": "wasm-pack build --dev --target web --out-dir web-sdk-wasm -- --features browser",
    "build-release": "wasm-pack build --release --target web --out-dir web-sdk-wasm -- --features browser",
    "bundle": "rollup -c && $PWD/fixup-types.sh",
    "clean": "rm -rf dist web-sdk-wasm node-sdk-wasm",
    "dev": "bun run build:wasm && bun run bundle",
    "release": "bun run build-release && bun run bundle",
    "fmt": "prettier -w src package.json rollup.config.js tsconfig.json",
    "publish-gh": "npm config set @tinycloudlabs:registry=https://npm.pkg.github.com && npm publish",
    "publish-npm": "npm config set @tinycloudlabs:registry=https://registry.npmjs.org && npm publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@rollup/plugin-wasm": "^5.2.0",
    "prettier": "^2.8.8",
    "rollup": "^2.79.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "tslib": "^2.8.1",
    "typescript": "^4.9.5"
  },
  "files": [
    "tsconfig.json",
    "dist"
  ]
}
