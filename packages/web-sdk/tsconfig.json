{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "dist/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    // Ensure this is set to "bundler" (best for Webpack 5) or "node"
    "moduleResolution": "bundler"
  }
}
