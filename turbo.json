{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "pkg/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "doc": {
      "dependsOn": ["build"],
      "outputs": ["temp/**", "../../documentation/docs/**"]
    },
    "doc:extractor": {
      "dependsOn": ["build"],
      "outputs": ["temp/**"]
    },
    "doc:documenter": {
      "dependsOn": ["doc:extractor"],
      "outputs": ["../../documentation/docs/**"]
    },
    "bundle": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "release": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": ["dist/**", "pkg/**"]
    }
  }
}