{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2016",
    "lib": [
        "ES2019", "DOM"
    ],
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["packages/*"]
    }
  }
}